		    <!-- Update Button -->
			<div class="form-inline">
			  <div class="form-group">
			    <input type="text" class="form-control" id="trend-query-string" placeholder="<%= user_query %>" value="<%= user_query %>">
			  </div>
			  <button id="trend-update-btn" class="btn btn-success"><span class="glyphicon glyphicon-refresh"></span>&nbsp;Update</button>
			</div>
	
			<!-- Update Button Ends -->
		</div>

		<div class="row" style="margin-top:30px">
		    <div class="col-md-4 chart-box" id="article-count-trend-wrapper">
		    	<!-- Trend Graph -->
			    <div id="article-count-trend">	
			    </div>
			    <div id="article-count-trend-control">
			      <button type="button" class="btn btn-default btn-xs" id="show-all-series-btn"><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;Show All</button>
				  <button type="button" class="btn btn-default btn-xs" id="hide-all-series-btn"><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;Hide All</button>
			    </div>
			   	<div id="trend-loading">
			    	<div class="progress progress-striped active">
					  <div class="progress-bar"  role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
